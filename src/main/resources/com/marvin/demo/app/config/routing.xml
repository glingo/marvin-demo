<?xml version="1.0" encoding="UTF-8"?>

<routing>
    
    <!-- Default controller routes -->
    <route name="default.index" path="/">
        <default key="_controller">marvin.demo.app.controller.DefaultController::index</default>
    </route>
    
    <routes prefix="/demo" >
        <route name="default.model" path="/model">
            <default key="_controller">marvin.demo.app.controller.DefaultController::model</default>
        </route>
        <route name="default.model_map" path="/model/map">
            <default key="_controller">marvin.demo.app.controller.DefaultController::modelMap</default>
        </route>
        <route name="default.model_and_view" path="/modelAndView">
            <default key="_controller">marvin.demo.app.controller.DefaultController::modelAndView</default>
        </route>
        <route name="default.view" path="/view">
            <default key="_controller">marvin.demo.app.controller.DefaultController::view</default>
        </route>
    </routes>
    
