<?xml version="1.0" encoding="UTF-8"?>

<routing>
    
    <route name="game" path="/">
        <default key="_controller">game_controller:list</default>
    </route>
    
    <route name="game.show" path="/show/{id}">
        <default key="_controller">game_controller:show</default>
        <requirement index="0" key="id">\\d+</requirement>
    </route>
    
    <route name="game.run" path="/run/{id}">
        <default key="_controller">game_controller:run</default>
        <requirement index="0" key="id">\\d+</requirement>
    </route>
    
    <route name="games.create" path="/create/{name}/{description}">
        <default key="_controller">game_controller:create</default>
        <requirement index="0" key="name">\\w+</requirement>
        <requirement index="0" key="description">\\w+</requirement>
    </route>

    <route name="games.form" path="/form">
        <default key="_controller">game_controller:form</default>
    </route>
</routing>