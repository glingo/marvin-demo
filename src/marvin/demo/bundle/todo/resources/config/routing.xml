<?xml version="1.0" encoding="UTF-8"?>

<routing>
    
    <route name="todos.list" path="/todos">
        <default key="_controller">task_controller:list</default>
    </route>
    
    <route name="todos.create" path="/todos/create/{arg0}/{arg1}">
        <default key="_controller">task_controller:create</default>
        <requirement key="arg0">\\w+</requirement>
        <requirement key="arg1">\\w+</requirement>
    </route>

    <route name="todos.form" path="/todos/form">
        <default key="_controller">task_controller:form</default>
    </route>
    
    <route name="todos.edit" path="/todos/edit/{arg0}">
        <default key="_controller">task_controller:edit</default>
        <requirement key="arg0">\\d+</requirement>
    </route>
    
