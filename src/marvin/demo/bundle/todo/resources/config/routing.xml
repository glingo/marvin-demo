<?xml version="1.0" encoding="UTF-8"?>

<routing>
    
    <route name="todos.list" path="/">
        <default key="_controller">task_controller:list</default>
    </route>
    
    <route name="todos.create" path="/create/{name}/{description}">
        <default key="_controller">task_controller:create</default>
        <requirement index="0" key="name">\\w+</requirement>
        <requirement index="1" key="description">\\w+</requirement>
    </route>

    <route name="todos.form" path="/form">
        <default key="_controller">task_controller:form</default>
    </route>
    
    <route name="todos.edit" path="/edit/{arg0}">
        <default key="_controller">task_controller:edit</default>
        <requirement index="0" key="arg0">\\d+</requirement>
    </route>
    
